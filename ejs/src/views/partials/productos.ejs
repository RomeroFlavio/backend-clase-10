<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Thumbnail</th>
        </tr>
            <% if (render) { %>
            <% arrayProducts.forEach(product => { %>
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.title %></td>
                    <td><%= product.price %></td>
                    <td><img src=<%= product.thumbnail %> alt=<%= product.title %> width="50"></td>
                </tr>
            <% });  %>
            <% } else { %>
                <h2><% message %></h2>
            <% } %>
    </table>
    <a href="/">Volver al formulario</a>
</div>